<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nimgame">

    <!-- مجوزهای بلوتوث و موقعیت -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:roundIcon="@mipmap/ic_launcher1_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NimGame">

        <!-- Splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Activity بلوتوث -->
        <activity
            android:name=".BluetoothChecker"
            android:exported="true" />

        <activity
            android:name=".GameAbout"
            android:exported="false" />

        <activity
            android:name=".GameActivity"
            android:exported="false" />
        <activity
            android:name=".Developer"
            android:exported="false" />
        <activity android:name=".nameplyer"
            android:exported="false" />

    </application>
</manifest>
